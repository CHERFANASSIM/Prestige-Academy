		<class>com.isika.prestigeacademy.model.entities.Entreprise</class>
		<class>com.isika.prestigeacademy.model.entities.EtapeValidation</class>
		<class>com.isika.prestigeacademy.model.entities.Evenement</class>
		<class>com.isika.prestigeacademy.model.entities.GererProspect</class>
		<class>com.isika.prestigeacademy.model.entities.NiveauAcces</class>
		<class>com.isika.prestigeacademy.model.entities.NiveauxPriorite</class>
		<class>com.isika.prestigeacademy.model.entities.Note</class>
		<class>com.isika.prestigeacademy.model.entities.Notifications</class>
		<class>com.isika.prestigeacademy.model.entities.OrganismeFinancement</class>
		<class>com.isika.prestigeacademy.model.entities.OffreEmploi</class>
		<class>com.isika.prestigeacademy.model.entities.ProgressionToDo</class>
		<class>com.isika.prestigeacademy.model.entities.PreferenceTypeContrat</class>
		<class>com.isika.prestigeacademy.model.entities.ProcessusRecrutement</class>
		<class>com.isika.prestigeacademy.model.entities.Promotion</class>
		<class>com.isika.prestigeacademy.model.entities.SpecialiteFormation</class>
		<class>com.isika.prestigeacademy.model.entities.Stagiaire</class>
		<class>com.isika.prestigeacademy.model.entities.Statut</class>
